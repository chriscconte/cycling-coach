<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>NSHealthShareUsageDescription</key>
    <string>We need access to your cycling workouts and heart rate data to provide personalized training insights and coaching.</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>We may update your health data to track your training progress.</string>
    <key>NSCalendarsUsageDescription</key>
    <string>We need access to your calendar to detect conflicts with your training schedule and suggest optimal workout times.</string>
    <key>NSRemindersUsageDescription</key>
    <string>We use reminders to help you stay on track with your training plan.</string>
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>processing</string>
    </array>
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.cyclingcoach.checktraining</string>
        <string>com.cyclingcoach.detectconflicts</string>
    </array>
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>cyclingcoach</string>
            </array>
            <key>CFBundleURLName</key>
            <string>com.cyclingcoach.oauth</string>
        </dict>
    </array>
</dict>
</plist>

